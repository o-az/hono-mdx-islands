{
  "compilerOptions": {
    "noEmit": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,

    "strict": true,
    "resolvePackageJsonImports": true,
    "allowImportingTsExtensions": true,
    "lib": [
      "DOM",
      "ESNext",
      "DOM.Iterable"
    ],
    "types": [
      "vite/client"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "paths": {
      "content-collections": [
        "./.content-collections/generated"
      ]
    }
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx"
  ],
  "files": [
    "vite.config.ts"
  ]
}
